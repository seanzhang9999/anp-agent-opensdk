    "version": "0.2.0",
    "configurations": [

        {
            "name": "win-demo_autorun",
            "type": "debugpy",
            "request": "launch",
            "python": ".venv/Scripts/python.exe",
            "program": "${workspaceFolder}/demo_autorun.py",
            "console": "integratedTerminal",
            "justMyCode": true,
      },
        {
            "name": "mac-demo_autoru",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_autorun.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
       {
            "name": "Python Debugger: Current File with Arguments all code",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": "${command:pickArgs}",
            "preLaunchTask": "activate-venv"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "preLaunchTask": "activate-venv-and-run-mcp"
        }
    ]
}